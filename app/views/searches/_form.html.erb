<div class="container">
  <div class="row">
    <div class="my-box col-4">
    </div>  
    <div class="my-box col-auto">
      <% if user_signed_in? %>
      <%= form_tag(search_path, method: :get) do %>
        <%= text_field_tag 'content' %>
        <%= select_tag 'model', options_for_select({ "User" => "user", "Book" => "book" }) %>
        <%= select_tag 'method', options_for_select({  "部分一致" => "partial","完全一致" => "perfect", "前方一致" => "forward","後方一致" => "backward", }) %>
        <%= submit_tag '検索' %>
      <% end %>
      <% end %>
    </div>
    <div class="my-box col-2">
    </div>
  </div>
</div>